{
  "manifest_version": 3,
  "name": "QuickA11y Audit",
  "version": "1.0.0",
  "description": "Auditez l'accessibilité de vos pages en un clic. Détectez les erreurs et générez des rapports PDF ou Markdown. Testez vos pages en mode simulation de daltonisme.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/report/report.html", "src/report/report.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
